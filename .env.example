# ===================================
# === DATABASE ======================
DATABASE_URL="postgresql://user:password@localhost:5432/skybot_inbox?schema=public"

# ===================================
# === API ===========================
# Clé API pour authentifier les appels au backend
API_KEY=your_api_key_here

# Port du serveur (par défaut 3001)
PORT=3001

# ===================================
# === N8N INTEGRATION ===============
# URL du Master Router n8n (webhook endpoint)
N8N_MASTER_ROUTER_URL=https://your-n8n-instance.com/webhook/whatsapp-master-webhook

# Nom du router (pour logging)
N8N_MASTER_ROUTER_NAME=AUTH-INBOX-N8N

# Secret partagé pour authentifier les appels vers n8n
# DOIT correspondre à N8N_MASTER_ROUTER_SECRET dans les variables d'environnement n8n
N8N_MASTER_ROUTER_SECRET=your_shared_secret_here

# ===================================
# === SKYBOT API ====================
# Base URL for SkyBot API (N8N deployment service)
SKYBOT_API_URL=http://localhost:8080

# API key for authenticating with SkyBot API
SKYBOT_API_KEY=your_skybot_api_key_here

# Secret for authenticating incoming webhooks from SkyBot
SKYBOT_WEBHOOK_SECRET=your_skybot_webhook_secret_here

# ===================================
# === WHATSAPP ======================
# Secret de l'app Meta pour vérifier les signatures webhook
WHATSAPP_APP_SECRET=your_whatsapp_app_secret

# Token de vérification pour le webhook Meta
WHATSAPP_VERIFY_TOKEN=your_verify_token

# ===================================
# === AIRTABLE ======================
# Airtable API Key for CRM, Analytics, Alerts, Settings
AIRTABLE_API_KEY=your_airtable_api_key
# Base ID for the Airtable database
AIRTABLE_BASE_ID=your_airtable_base_id

# ===================================
# === MONITORING ====================
# Logging
LOG_LEVEL=info

# Sentry Error Tracking (optional but recommended for production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===================================
# === ENVIRONMENT ===================
NODE_ENV=development
